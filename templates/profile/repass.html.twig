{% extends 'base.html.twig' %}

{% block title %}Мой аккаунт - Смена пароля{% endblock %}

{% block breadcrumbs %}
    {{ include('partions/breadcrumbs.html.twig', 
        {
            breadcrumbs: breadcrumbs
        }) 
    }}
{% endblock %}

{% block body %}
    
    <div class="container">

        <div class="title2">Смена пароля</div>

        {% for message in app.flashes('notice') %}
            <div class="flash flash-notice">
                {{ message }}
            </div>
        {% endfor %}

        <div class="form-change-pass">
            {# {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-primary">Сбросить пароль</button>
            {{ form_end(resetForm) }} #}

            {{ form_start(resetForm) }}
                <div class="block-form {{ (form_errors(resetForm.plainPassword.first) is empty ? '' : 'form-field-error') }}">
                    <div class="block-form-v">
                        <div>{{ form_label(resetForm.plainPassword.first) }}</div>
                        <div>{{ form_widget(resetForm.plainPassword.first) }}</div>
                    </div>
                    <div class="form-error">
                        {{ form_errors(resetForm.plainPassword.first) }}
                    </div>
                </div>
                 <div class="block-form {{ (form_errors(resetForm.plainPassword.second) is empty ? '' : 'form-field-error') }}">
                    <div class="block-form-v">
                        <div>{{ form_label(resetForm.plainPassword.second) }}</div>
                        <div>{{ form_widget(resetForm.plainPassword.second) }}</div>
                    </div>
                    <div class="form-error">
                        {{ form_errors(resetForm.plainPassword.second) }}
                    </div>
                </div>
                <button class="btn btn-primary">Сбросить пароль</button>
            {{ form_end(resetForm) }}
        </div>
    </div>

{% endblock %}